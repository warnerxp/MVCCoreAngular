@model MvcBandas.ViewModels.ConciertoCreateViewModel

@{
    ViewData["Title"] = "Editando el concierto en " + Model.Lugar + " de la banda " + Model.Banda;
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Lugar" class="control-label"></label>
                <input asp-for="Lugar" class="form-control" />
                <span asp-validation-for="Lugar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BandaId" class="control-label"></label>
                <select asp-for="BandaId" class="custom-select" asp-items="Model.Bandas">
                    <option value="">-----Seleccionar Banda</option>

                </select>
                <span asp-validation-for="BandaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div>
                <button class="btn btn-primary mr-2" type="submit">
                    <i class="fa fa-save" style="font-size:12px;"> Guardar</i>
                </button>
                <a asp-action="Index" class="btn btn-info mr-2"> <i class="fa fa-undo"> </i> Regresar</a>
            </div>
            @*<div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>*@
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
